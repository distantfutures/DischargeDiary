<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DischargeDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/DDLargeButtons</item>
        <item name="materialButtonOutlinedStyle">@style/DDLargeToggleButtons</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>
    <style name="DDLargeButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/med_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>
    <style name="DDLargeToggleButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/lg_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>
    <style name="InputTitles">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/med_text</item>
        <item name="android:padding">@dimen/input_text_time_pad</item>
    </style>
</resources>