<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DischargeRecords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/med_text</item>
        <item name="android:padding">@dimen/input_text_time_pad</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:textColorHint">@color/mid_grey</item>
        <item name="backgroundTint">@color/mid_grey</item>
    </style>
</resources>